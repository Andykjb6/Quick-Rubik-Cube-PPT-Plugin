<Window x:Class="课件帮PPT助手.ZhuYinEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="注音编辑器" Height="450" Width="497"
        Icon="pack://application:,,,/课件帮PPT助手;component/Resources/汉字转拼音.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧TextBox -->
        <TextBox Name="TextBoxLeft" Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10" TextChanged="TextBoxLeft_TextChanged"/>

        <!-- 右侧包含RichTextBox的StackPanel -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10" BorderBrush="#FF0F43F6" Background="#FFF9FAFD" BorderThickness="1,1,1,1" Grid.Row="0" Grid.Column="1">
            <StackPanel Name="StackPanelContent" Orientation="Vertical">
                <RichTextBox Name="RichTextBoxContent" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" FontSize="8" BorderBrush="{x:Null}" Background="#FFF9FAFD"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Name="BtnImport" Content="导入" Margin="5" Width="100" Click="BtnImport_Click" Background="#FF1E1EF3" BorderThickness="0" Foreground="White" FontSize="14" FontWeight="Bold" Height="23"/>
            <Button Name="BtnExport" Content="导出" Margin="5" Width="100" Click="BtnExport_Click" Background="#FF1E1EF3" BorderThickness="0" Foreground="White" FontSize="14" FontWeight="Bold" Height="23"/>
            <Button Name="BtnDetectMultiPronunciations" Content="多音字检测" Margin="5" Width="100" Click="BtnDetectMultiPronunciations_Click" Background="#FF1E1EF3" BorderThickness="0" Foreground="White" FontSize="14" FontWeight="Bold" Height="23"/>
            <Button Name="BtnCorrectPronunciations" Content="智能纠正" Margin="5" Width="100" Click="BtnCorrectPronunciations_Click" Background="#FF1E1EF3" BorderThickness="0" Foreground="White" FontSize="14" FontWeight="Bold" Height="23"/>
        </StackPanel>
    </Grid>
</Window>
